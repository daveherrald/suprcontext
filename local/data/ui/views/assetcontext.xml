<form>
  <label>AssetContext</label>
  <fieldset submitButton="true" autoRun="true">
    <input type="text" token="input_asset" searchWhenChanged="true">
      <label>Enter asset hostname or IP address:</label>
    </input>
    <input type="time" token="field1" searchWhenChanged="true">
      <label></label>
      <default>
        <earliest>-4h@m</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <title>Asset Details</title>
        <search>
          <query>| datamodel Identity_Management All_Assets search | search All_Assets.ip=$input_asset$</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="drilldown">cell</option>
        <option name="dataOverlayMode">none</option>
        <option name="count">10</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Listening Ports</title>
        <search>
          <query>| datamodel Application_State Ports search | search All_Application_State.dest=$input_asset$ | head 1| rename All_Application_State.dest as Asset | rename All_Application_State.Ports.transport_dest_port as "Open ports"| table  Asset,"Open ports"</query>
          <earliest>-15m</earliest>
          <latest>now</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Authentications</title>
        <search>
          <query>(src=$input_asset$ OR dest=$input_asset$) tag=authentication| stats count(eval(action="success")) as Success, count(eval(action="failure")) as Failure by src,dest</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
    <panel>
      <single>
        <search>
          <query>| datamodel Network_Traffic All_Traffic search | search $input_asset$ | stats sum(All_Traffic.bytes_out)</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="linkView">search</option>
        <option name="beforeLabel">Bytes out:</option>
      </single>
    </panel>
    <panel>
      <single>
        <search>
          <query>| datamodel Network_Traffic All_Traffic search | search $input_asset$ | stats sum(All_Traffic.bytes_in)</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="beforeLabel">Bytes in:</option>
        <option name="linkView">search</option>
        <option name="drilldown">none</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>IDS actions by count</title>
        <search>
          <query>| pivot Intrusion_Detection IDS_Attacks count(IDS_Attacks) AS "Count of IDS Attacks" SPLITROW action AS action FILTER src is "$input_asset$" SORT 5 action ROWSUMMARY 0 COLSUMMARY 0 NUMCOLS 0 SHOWOTHER 1</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Risk Modifiers</title>
        <search>
          <query>| `datamodel("Risk","All_Risk")` | `drop_dm_object_name("All_Risk")` | search risk_object="$input_asset$" risk_object_type="system" | table search_name</query>
          <earliest>-7d@h</earliest>
          <latest>now</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <search>
          <query>| datamodel Malware Malware_Attacks search  | search (Malware_Attacks.src=$input_assett$ OR Malware_Attacks.dest=$input_asset$)  | stats count by Malware_Attacks.category</query>
          <earliest>0</earliest>
          <latest></latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
</form>